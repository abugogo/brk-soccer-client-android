	<uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".SoccerGroupManagerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameManagerActivity"></activity>
        <activity android:name="ListOfPlayersActivity"></activity>
        <activity android:name="GameInProgressActivity"></activity>
        <activity android:name="com.soccer.preferences.ShowSettingsActivity"></activity>
